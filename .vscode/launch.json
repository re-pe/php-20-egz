{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Chrome 3000",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${cwd}",
        },
        {
            "name": "Chrome 8000",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${cwd}",
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "ignore": ["**/vendor/**/*.php"],
            "port": 9003,
        }, {
            "name": "Launch index.php",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/index.php",
            "ignore": ["**/vendor/**/*.php"],
            "cwd": "${workspaceFolder}",
            "port": 9003,
        },
        {
            "name": "Launch currently opened script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003,
        }
    ]
}